[Unit]
Description=Couchpotato container
After=docker.service

[Service]
Restart=always
ExecStartPre=-/usr/bin/docker rm couchpotato_run
ExecStart=/usr/bin/docker run --volumes-from couchpotato_data -p 5050:5050 --name couchpotato_run couchpotato
ExecStop=/usr/bin/docker stop couchpotato_run

[Install]
WantedBy=multi-user.target
