[Unit]
Description=Syncthing container
After=docker.service

[Service]
Restart=always
ExecStartPre=-/usr/bin/docker rm syncthing_run
ExecStart=/usr/bin/docker run -v /mnt/media:/mnt/media -v /home/firecat53:/home/firecat53 --volumes-from media_data --volumes-from syncthing_config -p 22000:22000 -p 8087:8087 --name syncthing_run syncthing
ExecStop=/usr/bin/docker stop syncthing_run

[Install]
WantedBy=multi-user.target
