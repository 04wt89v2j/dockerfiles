[Unit]
Description=CrashPlan container
After=docker.service

[Service]
Restart=always
ExecStartPre=-/usr/bin/docker rm crashplan_run
ExecStart=/usr/bin/docker run -h %H_crashplan --volumes-from crashplan_data -v /mnt/backup:/mnt/backup -p 4242:4242 -p 4243:4243 --name crashplan_run crashplan
ExecStop=/usr/bin/docker stop crashplan_run

[Install]
WantedBy=multi-user.target
