[Unit]
Description=Lazy Librarian container
After=docker.service

[Service]
Restart=always
ExecStart=-/usr/bin/docker rm lazylibrarian_run
ExecStart=/usr/bin/docker run --volumes-from lazylibrarian_config --volumes-from media_data -p 5299:5299 --name lazylibrarian_run lazylibrarian
ExecStop=/usr/bin/docker stop lazylibrarian_run

[Install]
WantedBy=multi-user.target
